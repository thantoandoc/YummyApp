<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/parent_layout"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/AppTheme.CustomCardView"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:layout_marginTop="@dimen/activity_padding"
    android:layout_marginHorizontal="@dimen/activity_margin_horizontal"
    android:padding="@dimen/activity_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/activity_margin">
        <TextView
            android:textSize="@dimen/text_size_name"
            android:id="@+id/txt_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/background"
            android:layout_below="@id/txt_table"
            android:id="@+id/img_table"
            android:layout_width="@dimen/item_dish_choose"
            android:layout_height="@dimen/item_dish_choose" />
    </RelativeLayout>
</android.support.v7.widget.CardView>